// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext", 
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./", 
    // "baseUrl": "./", 
    // "paths": { "@/*": ["src/*"] }, 
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "*.ts"], 
  "exclude": ["node_modules", "dist"]
}
